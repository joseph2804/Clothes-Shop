<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang chủ</title>
    <%- include('component/library'); -%>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <script type="module" src="/js/page/homePage.js"></script>
</head>
<body>
    <%- include('component/header'); -%>
    <div class="container-fluid home-page">
        <section class="banner">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/banner_test.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner_test_2.jpg" alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner_test_3.jpg" alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
        </section>

        <section class="category-list row">
            <div class="left col-6" data-name="Áo phông">
                <a href="/product?type=tshirt&sort=id">
                    <img src="/images/category_img_left.jpg" alt="">
                </a>
            </div>
            <div class="right col-6" data-name="Áo sơ mi">
                <a href="/product?type=shirt&sort=id">
                    <img src="/images/category_img_right.jpg">
                </a>
            </div>
        </section>

        <section class="new-arrivals row">
            <div class="title col-12">
                <p>Sản phẩm mới</p>
            </div>
            <% hotDealList.forEach(product => { %>
                <% var colorList = product.ProductImage.split(','); %>
                <% var firstImg = `/images/products/${product.ProductID}_${colorList[0]}.jpg`; %>
                <% var name = product.ProductName; %>
                <% var price = product.ProductPrice; %>
                <% var priceString = `${price / 1000}.000 vnđ`; %>
                <div class="col-3 product">
                    <%- include('component/product', {
                        colorList: colorList,
                        firstImg: firstImg,
                        name: name,
                        price: price,
                        priceString: priceString,
                        productId: product.ProductID
                    }); %>
            <% }) %>
            <div class="btn-other col-12">
                <a href="/product?sort=sold">Xem thêm</a>
            </div>
        </section>

        <section class="hot-deals row">
            <div class="title col-12">
                <p>Bán chạy</p>
            </div>
            <% newArrivalsList.forEach(product => { %>
                <% var colorList = product.ProductImage.split(','); %>
                <% var firstImg = `/images/products/${product.ProductID}_${colorList[0]}.jpg`; %>
                <% var name = product.ProductName; %>
                <% var price = product.ProductPrice; %>
                <% var priceString = `${price / 1000}.000 vnđ`; %>
                <div class="col-3 product">
                    <%- include('component/product', {
                        colorList: colorList,
                        firstImg: firstImg,
                        name: name,
                        price: price,
                        priceString: priceString,
                        productId: product.ProductID
                    }); %>
            <% }) %>
            <div class="btn-other col-12">
                <a href="/product?sort=id">Xem thêm</a>
            </div>
        </section>

        <section class="end-banner banner">
            <!-- một cái banner giới thiệu -->
        </section>
    </div>
    <%- include('component/footer'); -%>
</body>
</html>